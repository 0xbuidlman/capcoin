#!/usr/bin/env node
var program = require('commander');

program
  .description('Check global stats')
  .option('--json', 'only JSON output')
  .usage('[options]')

var cli = require('../cli')(program);

var outputFunction = cli.helpers.horizontalTable;
if (program.json) {
  outputFunction = cli.helpers.json;
}

cli
  .commands
  .map()
  .then(outputFunction)
  .catch(console.error)
